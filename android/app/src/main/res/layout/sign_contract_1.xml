<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/design_default_color_on_primary"
    tools:context=".MainActivity">


    <com.daimajia.numberprogressbar.NumberProgressBar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:progress_reached_bar_height="10dp"
        app:progress_unreached_bar_height="10dp"
        android:layout_marginTop="-25dp"

        app:progress_current="20"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/sign_find_1"
        android:layout_marginLeft="110dp"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="60dp"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:text="查找合同ID："/>
    <EditText
        android:id="@+id/contract_id_1"
        android:layout_width="250dp"
        android:layout_marginLeft="60dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/translucent"
        android:hint="请输入合同ID"/>
    <Button
        android:id="@+id/next_tap_1"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="100dp"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:text="查找"
        android:textColor="@color/design_default_color_on_primary"
        android:textSize="19dp"
        android:background="@drawable/translucent_button"/>
</LinearLayout>