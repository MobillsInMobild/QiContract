<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/design_default_color_on_primary"
    tools:context=".MainActivity">
    <com.daimajia.numberprogressbar.NumberProgressBar
        android:layout_width="match_parent"
        android:layout_marginTop="-25dp"
        android:layout_height="60dp"
        app:progress_reached_bar_height="10dp"
        app:progress_unreached_bar_height="10dp"
        app:progress_current="80"/>
    <ImageView
        android:layout_marginLeft="110dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/verity"/>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="55dp"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:text="合同ID："/>
        <TextView
            android:id="@+id/contact_id_4"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textSize="24dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/signView"
        >
        <ImageView
            android:layout_marginLeft="50dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/hash_pic_1"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:text="SignHash：" />
        <TextView
            android:id="@+id/SignHash"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/depositView"
        >
        <ImageView
            android:layout_marginLeft="50dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/hash_pic_2"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:text="DepositHash：" />
        <TextView
            android:id="@+id/DepositHash"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/claimView">
        <ImageView
            android:layout_marginLeft="50dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/hash_pic_3"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:text="ClaimHash：" />
        <TextView
            android:id="@+id/ClaimHash"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/refundView"
        >
        <ImageView
            android:layout_marginLeft="50dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/hash_pic_4"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:text="RefundHash：" />
        <TextView
            android:id="@+id/RefundHash"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            />
    </LinearLayout>
    <Button
        android:id="@+id/next_tap_4"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="30dp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="验证合同"
        android:textColor="@color/design_default_color_on_primary"
        android:background="@drawable/translucent_button"/>
    </LinearLayout>